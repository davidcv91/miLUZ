<!DOCTYPE html>
<html lang="{{ app.request.defaultLocale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('apple-icon-57x57.png') }}">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('apple-icon-60x60.png') }}">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('apple-icon-72x72.png') }}">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('apple-icon-76x76.png') }}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('apple-icon-114x114.png') }}">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('apple-icon-120x120.png') }}">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('apple-icon-144x144.png') }}">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('apple-icon-152x152.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-icon-180x180.png') }}">
    <link rel="icon" type="image/png" sizes="192x192"  href="{{ asset('android-icon-192x192.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('favicon-96x96.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('manifest.json') }}">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ asset('ms-icon-144x144.png') }}">
    <meta name="theme-color" content="#ffffff">

    <title>{% block title %}{{ 'app.name'|trans }} - {% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('libs/bootstrap-4.3.1/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('libs/fontawesome-5.7.2/css/all.min.css') }}">
    {% endblock %}
</head>
<body>
{% block navbar %}
    {% if is_granted('ROLE_USER') %}
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('view_dashboard') }}">
            <img src="{{ asset('app_logo.png') }}" class="align-text-bottom" style="width: 25px;">
            {{ 'app.name'|trans }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link" href="{{ path('view_dashboard') }}">{{ 'nav.dashboard'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('new_import') }}">{{ 'nav.import'|trans }}</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuConsumption" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ 'nav.consumption.consumption'|trans }}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuConsumption">
                        <a class="dropdown-item" href="{{ path('view_insights') }}">{{ 'nav.consumption.insights'|trans }}</a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLanguage" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-globe"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLanguage" style="min-width: auto;">
                        <a class="dropdown-item" href="{{ path('change_locale', {'locale' : 'en'}) }}">English</a>
                        <a class="dropdown-item" href="{{ path('change_locale', {'locale' : 'es'}) }}">Espa√±ol</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i>&nbsp;{{ 'nav.logout'|trans }}</a>
                </li>
            </ul>
        </div>
    </nav>
    {% endif %}
{% endblock %}

{% block body %}{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('libs/bootstrap-4.3.1/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}
</body>
</html>
