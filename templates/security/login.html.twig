{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Login{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="btn-group ml-auto">
            <button type="button" class="btn btn-light dropdown-toggle text-dark" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-globe"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" href="{{ path('change_locale', {'locale' : 'en'}) }}">English</a>
                <a class="dropdown-item" href="{{ path('change_locale', {'locale' : 'es'}) }}">Espa√±ol</a>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card my-5">
                    <div class="card-body px-5">
                        <form method="post">
                            <h3 class="card-title text-center font-weight-normal mb-4">miLUZ</h3>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="{{ 'login.username'|trans }}" required autofocus>
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'login.password'|trans }}" required>
                            </div>
                            <div class="input-group mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me">&nbsp;<span class="font-weight-light">{{ 'login.remember_me'|trans }}</span>
                                </label>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <button class="btn btn-block btn-lg btn-primary mb-3" type="submit">
                                {{ 'btn.login'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body {
            background: #ffbb00;
            background: linear-gradient(to right, #ffbb00, #fffa78);
        }
        .card {
            border: 0;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}