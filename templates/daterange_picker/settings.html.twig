{% block daterange_picker_settings %}
<script>
    var daterange_picker_settings = {
        "maxYear": moment().year(),
        ranges: {
            "{{ 'daterange_picker.ranges.today'|trans }}": [moment(), moment()],
            "{{ 'daterange_picker.ranges.yesterday'|trans }}": [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
            "{{ 'daterange_picker.ranges.last_num_days'|trans({'%num%': 7}) }}": [moment().subtract(6, 'days'), moment()],
            "{{ 'daterange_picker.ranges.last_num_days'|trans({'%num%': 30}) }}": [moment().subtract(29, 'days'), moment()],
            "{{ 'daterange_picker.ranges.this_month'|trans }}": [moment().startOf('month'), moment().endOf('month')],
            "{{ 'daterange_picker.ranges.last_month'|trans }}": [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
        },
        "locale": {
            "format": "{{ 'daterange_picker.date_format'|trans }}",
            "separator": " - ",
            "applyLabel": "{{ 'btn.apply'|trans }}",
            "cancelLabel": "{{ 'btn.cancel'|trans }}",
            "fromLabel": "{{ 'daterange_picker.from_label'|trans }}",
            "toLabel": "{{ 'daterange_picker.to_label'|trans }}",
            "customRangeLabel": "{{ 'daterange_picker.ranges.custom'|trans }}",
            "weekLabel": "{{ 'daterange_picker.week_label'|trans }}",
            "daysOfWeek": [
                "{{ 'days.sunday'|trans|slice(0, 2) }}",
                "{{ 'days.monday'|trans|slice(0, 2) }}",
                "{{ 'days.tuesday'|trans|slice(0, 2) }}",
                "{{ 'days.wednesday'|trans|slice(0, 2) }}",
                "{{ 'days.thursday'|trans|slice(0, 2) }}",
                "{{ 'days.friday'|trans|slice(0, 2) }}",
                "{{ 'days.saturday'|trans|slice(0, 2) }}"
            ],
            "monthNames": [
                "{{ 'months.january'|trans }}",
                "{{ 'months.february'|trans }}",
                "{{ 'months.march'|trans }}",
                "{{ 'months.april'|trans }}",
                "{{ 'months.may'|trans }}",
                "{{ 'months.june'|trans }}",
                "{{ 'months.july'|trans }}",
                "{{ 'months.august'|trans }}",
                "{{ 'months.september'|trans }}",
                "{{ 'months.october'|trans }}",
                "{{ 'months.november'|trans }}",
                "{{ 'months.december'|trans }}"
            ],
            "firstDay": 1
        },
        "alwaysShowCalendars": true,
        "startDate": "{{ app.session.get('datetimeFrom') | date("app.date_format" | trans) }}",
        "endDate": "{{ app.session.get('datetimeTo') | date("app.date_format" | trans) }}",
        "showCustomRangeLabel": false,
        "opens": "left"
    };
</script>
{% endblock %}